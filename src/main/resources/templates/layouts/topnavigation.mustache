<body>
<body>
<!-- navigation -->
<nav class="navbar navbar-expand-lg bg-light">
  <div class="container-fluid">
    <a class="navbar-brand" href="#">Quizlet</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item">
          <a class="nav-link active" aria-current="page" href="#">홈</a>
        </li>
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            만들기
          </a>
          <ul class="dropdown-menu">
            <li><a class="dropdown-item" href="#">합슥 세트</a></li>
            <li><a class="dropdown-item" href="#">폴더</a></li>
            <li><a class="dropdown-item" href="#">클래스</a></li>
          </ul>
        </li>
      </ul>
      <form class="d-flex" role="search">
        <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
        <button class="btn btn-light" type="submit">로그인</button>
        <button class="btn btn-warning" type="submit">회원 가입</button>
      </form>
    </div>
  </div>
</nav>
<!-- alert msg -->
{{#msg}}
  <div class="alert alert-primary alert-dismissible">
    {{msg}}
    <button type="button" class="btn-close" data-bs-dismis="alert" aria-label="Close"></button>
  </div>
{{/msg}}